<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/review_item_author"
            android:gravity="center_vertical"
            android:layout_weight="0"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/review_item_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:text="" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/review_item_read_more">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/review_item_open"
            android:src="@drawable/ic_open_in_browser_black_48dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:layout_marginLeft="48dp"
            android:textAlignment="gravity"
            android:scaleType="fitXY"
            android:baselineAlignBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Read More"
            android:id="@+id/review_item_read_more_text"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>